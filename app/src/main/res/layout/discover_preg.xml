<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/preg_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@null"
        android:drawableEnd="@drawable/down2"
        android:drawableStart="@drawable/lingdang"
        android:padding="15dp"
        android:drawablePadding="10dp"
        android:text="Diet tips"
        android:textColor="@color/grey"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/preg_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shangyige"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@drawable/shangyige"

            android:visibility="invisible" />

        <TextView
            android:id="@+id/preg_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/discover_msg1" />


        <ImageView
            android:id="@+id/xiayige"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@drawable/xiayige" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:background="@color/white" />

    <CheckBox
        android:id="@+id/preg_check2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@null"
        android:drawableEnd="@drawable/down2"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/liebiao"
        android:padding="15dp"
        android:text="Preparation list"
        android:textColor="@color/grey"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/preg_ll2"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/discover_msg2" />
</LinearLayout>