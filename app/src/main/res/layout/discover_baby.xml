<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/discover_baby_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/baby_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@null"
        android:drawableEnd="@drawable/down2"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/baby6"
        android:padding="15dp"
        android:text="Baby Diet &amp; Sleeping  Tips "
        android:textColor="@color/grey"
        android:textSize="15sp" />

    <myapplication.com.bluetoothscales.CustomViewPager
        android:id="@+id/baby_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="10dp" />
    <CheckBox
        android:id="@+id/baby_check2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@null"
        android:drawableEnd="@drawable/down2"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/baby7"
        android:padding="15dp"
        android:text="Parenting Tips"
        android:textColor="@color/grey"
        android:textSize="15sp" />

    <myapplication.com.bluetoothscales.CustomViewPager
        android:id="@+id/baby_pager2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="10dp" />
</LinearLayout>